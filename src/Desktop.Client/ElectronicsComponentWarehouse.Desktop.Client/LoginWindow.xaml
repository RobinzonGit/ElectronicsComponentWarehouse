<Window x:Class="ElectronicsComponentWarehouse.Desktop.Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Login - Electronics Component Warehouse" 
        Height="450" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Border Background="{DynamicResource MaterialDesignBackground}">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,32">
                <materialDesign:PackIcon Kind="Chip" Width="64" Height="64" 
                                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                <TextBlock Text="Electronics Component Warehouse" 
                         FontSize="20" FontWeight="SemiBold" 
                         HorizontalAlignment="Center" Margin="0,8,0,0"/>
                <TextBlock Text="Please login to continue" 
                         Foreground="{DynamicResource MaterialDesignBody}"
                         HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Login Form -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Username -->
                <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock Text="Username" 
                             Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                    <TextBox x:Name="UsernameTextBox" 
                            materialDesign:HintAssist.Hint="Enter username"
                            FontSize="14" Padding="12,8"
                            TextChanged="UsernameTextBox_TextChanged"/>
                </StackPanel>

                <!-- Password -->
                <StackPanel Grid.Row="1" Margin="0,0,0,16">
                    <TextBlock Text="Password" 
                             Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                    <PasswordBox x:Name="PasswordBox" 
                                materialDesign:HintAssist.Hint="Enter password"
                                FontSize="14" Padding="12,8"
                                PasswordChanged="PasswordBox_PasswordChanged"/>
                </StackPanel>

                <!-- Error Message -->
                <Border Grid.Row="2" x:Name="ErrorBorder" 
                       Background="{DynamicResource MaterialDesignValidationErrorBrush}"
                       CornerRadius="4" Padding="12,8" 
                       Visibility="Collapsed" Margin="0,0,0,16">
                    <TextBlock x:Name="ErrorMessageText" 
                             Foreground="White" TextWrapping="Wrap"/>
                </Border>

                <!-- Login Button -->
                <Button Grid.Row="3" x:Name="LoginButton" Content="Login"
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       HorizontalAlignment="Stretch"
                       Height="48" FontSize="16"
                       IsEnabled="False"
                       Click="LoginButton_Click">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="Login" 
                                                       Width="20" Height="20" 
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Login"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </Grid>

            <!-- Footer -->
            <StackPanel Grid.Row="2" Margin="0,32,0,0">
                <Separator Margin="0,0,0,16"/>
                <TextBlock Text="Demo Credentials:" 
                         FontWeight="SemiBold" HorizontalAlignment="Center"/>
                <TextBlock Text="Admin: admin / admin123" 
                         HorizontalAlignment="Center" Margin="0,4,0,0"/>
                <TextBlock Text="User: user / user123" 
                         HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>