<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="ElectronicsComponentWarehouse.Desktop.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ElectronicsComponentWarehouse.Desktop.Client.Common.Converters"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <!-- Конвертеры -->
            <local:RoleToVisibilityConverter x:Key="RoleToVisibilityConverter" />
            <local:StockToColorConverter x:Key="StockToColorConverter" />
            <local:DateTimeConverter x:Key="DateTimeConverter" />
            <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
            <local:NullToBooleanConverter x:Key="NullToBooleanConverter" />
            <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

            <!-- Стили для дерева категорий -->
            <Style x:Key="CategoryTreeViewItemStyle" TargetType="TreeViewItem">
                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Стили для кнопок -->
            <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                <Setter Property="Width" Value="32"/>
                <Setter Property="Height" Value="32"/>
                <Setter Property="Padding" Value="4"/>
                <Setter Property="Margin" Value="2"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <!-- Статус бар -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель с меню -->
        <Grid Grid.Row="0" Background="{DynamicResource PrimaryHueMidBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Логотип и название -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                <materialDesign:PackIcon Kind="Chip" Width="24" Height="24" Foreground="White"/>
                <TextBlock Text="Electronics Component Warehouse" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Меню -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,0,0,0">
                <Button Content="Компоненты" 
                        Command="{Binding ShowComponentsCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="White"/>
                <Button Content="Категории" 
                        Command="{Binding ShowCategoriesCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="White"/>
                <Button Content="Отчеты" 
                        Command="{Binding ShowReportsCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="White"/>
            </StackPanel>

            <!-- Информация о пользователе -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,10,0">
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock Text="{Binding CurrentUser.Username}" 
                               Foreground="White" 
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding CurrentUser.Role}" 
                               Foreground="White" 
                               FontSize="11"/>
                </StackPanel>
                <Button Command="{Binding LogoutCommand}"
                        ToolTip="Выйти">
                    <materialDesign:PackIcon Kind="Logout" Foreground="White"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Панель категорий (слева) -->
            <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок и кнопки категорий -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Категории" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Center"
                                   Margin="5"/>
                        <Button Command="{Binding AddCategoryCommand}"
                                ToolTip="Добавить категорию"
                                Visibility="{Binding CurrentUser.Role, Converter={StaticResource RoleToVisibilityConverter}}">
                            <materialDesign:PackIcon Kind="Plus" Width="16" Height="16"/>
                        </Button>
                        <Button Command="{Binding RefreshCategoriesCommand}"
                                ToolTip="Обновить">
                            <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16"/>
                        </Button>
                    </StackPanel>

                    <!-- Дерево категорий -->
                    <TreeView Grid.Row="1" 
                              ItemsSource="{Binding Categories}"
                              SelectedItemChanged="TreeView_SelectedItemChanged"
                              ItemContainerStyle="{StaticResource CategoryTreeViewItemStyle}"
                              Margin="5">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding ChildCategories}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Folder" 
                                                             Width="16" 
                                                             Height="16" 
                                                             Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding DisplayName}"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>

            <!-- Разделитель -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>

            <!-- Панель компонентов (справа) -->
            <Grid Grid.Column="2" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок и путь категории -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Компоненты" 
                               FontWeight="Bold"/>
                    <TextBlock Text=" в категории: " 
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedCategoryPath}" 
                               FontWeight="Bold"
                               Foreground="Blue"/>
                </StackPanel>

                <!-- Панель поиска и фильтров -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Поиск -->
                    <TextBox Grid.Column="0" 
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Поиск компонентов..."
                             Margin="0,0,10,0">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <!-- Фильтры (заглушка) -->
                    <ComboBox Grid.Column="1" 
                              Width="150"
                              Margin="0,0,10,0"
                              IsEnabled="False">
                        <ComboBoxItem>Все</ComboBoxItem>
                        <ComboBoxItem>Низкий запас</ComboBoxItem>
                    </ComboBox>

                    <!-- Кнопки действий -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Command="{Binding AddComponentCommand}"
                                ToolTip="Добавить компонент"
                                Visibility="{Binding CurrentUser.Role, Converter={StaticResource RoleToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" Margin="0,0,5,0"/>
                                <TextBlock Text="Добавить"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding EditComponentCommand}"
                                ToolTip="Редактировать выбранный компонент"
                                Visibility="{Binding CurrentUser.Role, Converter={StaticResource RoleToVisibilityConverter}}"
                                IsEnabled="{Binding SelectedComponent, Converter={StaticResource NullToBooleanConverter}}">
                            <materialDesign:PackIcon Kind="Pencil"/>
                        </Button>
                        <Button Command="{Binding DeleteComponentCommand}"
                                ToolTip="Удалить выбранный компонент"
                                Visibility="{Binding CurrentUser.Role, Converter={StaticResource RoleToVisibilityConverter}}"
                                IsEnabled="{Binding SelectedComponent, Converter={StaticResource NullToBooleanConverter}}">
                            <materialDesign:PackIcon Kind="Delete"/>
                        </Button>
                        <Button Command="{Binding RefreshComponentsCommand}"
                                ToolTip="Обновить">
                            <materialDesign:PackIcon Kind="Refresh"/>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Список компонентов -->
                <DataGrid Grid.Row="2" 
                          ItemsSource="{Binding Components}"
                          SelectedItem="{Binding SelectedComponent}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          AlternatingRowBackground="#FFF0F0F0"
                          AlternationCount="2">
                    <DataGrid.Columns>
                        <!-- Название -->
                        <DataGridTextColumn Header="Название" 
                                            Binding="{Binding Name}" 
                                            Width="2*"/>

                        <!-- Описание -->
                        <DataGridTextColumn Header="Описание" 
                                            Binding="{Binding Description}" 
                                            Width="3*"/>

                        <!-- Количество -->
                        <DataGridTemplateColumn Header="Количество" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding StockQuantity}"/>
                                        <TextBlock Text="/" Margin="2,0,2,0"/>
                                        <TextBlock Text="{Binding MinimumStockLevel}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Ячейка хранения -->
                        <DataGridTextColumn Header="Ячейка" 
                                            Binding="{Binding StorageCellNumber}" 
                                            Width="100"/>

                        <!-- Дата обновления -->
                        <DataGridTextColumn Header="Обновлен" 
                                            Binding="{Binding LastUpdated, Converter={StaticResource DateTimeConverter}}" 
                                            Width="150"/>

                        <!-- Действия -->
                        <DataGridTemplateColumn Header="Действия" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Кнопка открытия даташита -->
                                        <Button Command="{Binding DataContext.OpenDatasheetCommand, 
                                                RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding DatasheetLink}"
                                                ToolTip="Открыть даташит"
                                                IsEnabled="{Binding DatasheetLink, Converter={StaticResource NullToBooleanConverter}}"
                                                Margin="2">
                                            <materialDesign:PackIcon Kind="FileDocument" Width="16" Height="16"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Статус бар -->
                <StatusBar Grid.Row="3" Margin="0,10,0,0">
                    <StatusBarItem>
                        <TextBlock Text="{Binding StatusMessage}"/>
                    </StatusBarItem>
                    <Separator/>
                    <StatusBarItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Компонентов:"/>
                            <TextBlock Text="{Binding Components.Count}" FontWeight="Bold" Margin="5,0,0,0"/>
                        </StackPanel>
                    </StatusBarItem>
                    <Separator/>
                    <StatusBarItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Категория:"/>
                            <TextBlock Text="{Binding SelectedCategoryPath}" 
                                       FontWeight="Bold" 
                                       Margin="5,0,0,0"/>
                        </StackPanel>
                    </StatusBarItem>
                </StatusBar>
            </Grid>
        </Grid>

        <!-- Нижняя панель (индикатор загрузки) -->
        <Grid Grid.Row="2" Background="{DynamicResource PrimaryHueLightBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Индикатор загрузки -->
            <ProgressBar Grid.Column="0" 
                         Value="{Binding ProgressValue}" 
                         Maximum="100" 
                         Height="4" 
                         Margin="10,2"
                         Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <!-- Версия приложения -->
            <TextBlock Grid.Column="1" 
                       Text="{Binding AppVersion}" 
                       FontSize="10" 
                       Margin="10,2" 
                       VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>