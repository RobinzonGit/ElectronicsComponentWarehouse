{
  "AppSettings": {
    "AppName": "Electronics Component Warehouse",
    "AppVersion": "1.0.0",
    "CompanyName": "Electronics Warehouse Inc.",
    "DefaultLanguage": "ru-RU"
  },
  "ApiSettings": {
    "BaseUrl": "https://localhost:5001",
    "TimeoutSeconds": 30,
    "RetryCount": 3
  },
  "AuthSettings": {
    "TokenStorageKey": "auth_token",
    "UserStorageKey": "user_info",
    "TokenRefreshMinutes": 15,
    "AutoLogin": true
  },
  "UiSettings": {
    "Theme": "Light",
    "PrimaryColor": "Blue",
    "AccentColor": "Amber",
    "FontSize": "Medium",
    "AnimationEnabled": true,
    "ConfirmDeletions": true,
    "AutoSaveIntervalMinutes": 5
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "File": {
      "Path": "logs/client-.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 7
    }
  }
}