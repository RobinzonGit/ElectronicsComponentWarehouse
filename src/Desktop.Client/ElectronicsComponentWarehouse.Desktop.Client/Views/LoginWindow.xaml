<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="ElectronicsComponentWarehouse.Desktop.Client.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:ElectronicsComponentWarehouse.Desktop.Client.Common.Converters"
        mc:Ignorable="d"
        Title="Вход в систему" 
        Height="400" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,30,0,20">
            <materialDesign:PackIcon Kind="AccountKey" 
                                     Width="64" 
                                     Height="64" 
                                     Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            <TextBlock Text="Electronics Component Warehouse" 
                       FontSize="16" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
            <TextBlock Text="Вход в систему" 
                       FontSize="14"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Поля ввода -->
        <StackPanel Grid.Row="1" Margin="40,0,40,0">
            <!-- Имя пользователя -->
            <TextBlock Text="Имя пользователя" 
                       Margin="0,0,0,5"
                       FontWeight="SemiBold"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Введите имя пользователя"
                     Margin="0,0,0,15"
                     IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                </TextBox.InputBindings>
            </TextBox>

            <!-- Пароль -->
            <TextBlock Text="Пароль" 
                       Margin="0,0,0,5"
                       FontWeight="SemiBold"/>
            <PasswordBox x:Name="PasswordBox"
                         materialDesign:HintAssist.Hint="Введите пароль"
                         Margin="0,0,0,15"
                         IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
                <PasswordBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                </PasswordBox.InputBindings>
            </PasswordBox>

            <!-- Запомнить меня -->
            <CheckBox IsChecked="{Binding RememberMe}"
                      Content="Запомнить меня"
                      Margin="0,0,0,15"
                      IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"/>

            <!-- Сообщение об ошибке -->
            <Border Visibility="{Binding ShowErrorMessage, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Background="#FFFEE"
                    BorderBrush="#FFCCCC"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="10"
                    Margin="0,0,0,15">
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Red" 
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Индикатор загрузки -->
            <ProgressBar Height="4" 
                         IsIndeterminate="True"
                         Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                         Margin="0,0,0,15"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
            <Button Command="{Binding LoginCommand}"
                    Content="Вход" 
                    Width="120" 
                    Height="36"
                    IsDefault="True"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>

            <Button Command="{Binding ClearFormCommand}"
                    Content="Очистить" 
                    Width="120" 
                    Height="36"
                    Margin="20,0,0,0"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>

            <Button Command="{Binding CancelCommand}"
                    Content="Отмена" 
                    Width="120" 
                    Height="36"
                    Margin="20,0,0,0"
                    IsCancel="True"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
        </StackPanel>
    </Grid>
</Window>