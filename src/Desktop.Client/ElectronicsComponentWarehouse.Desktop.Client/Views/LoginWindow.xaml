<Window x:Class="ElectronicsComponentWarehouse.Desktop.Client.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Вход в систему" 
        Height="350" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <materialDesign:PackIcon Kind="AccountKey" 
                                     Width="64" 
                                     Height="64" 
                                     Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            <TextBlock Text="Electronics Component Warehouse" 
                       FontSize="16" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Вход в систему" 
                       FontSize="14"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Поля ввода -->
        <StackPanel Grid.Row="1">
            <!-- Имя пользователя -->
            <TextBlock Text="Имя пользователя" 
                       Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" 
                     materialDesign:HintAssist.Hint="Введите имя пользователя"
                     Margin="0,0,0,15"/>

            <!-- Пароль -->
            <TextBlock Text="Пароль" 
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" 
                         materialDesign:HintAssist.Hint="Введите пароль"
                         Margin="0,0,0,15"/>

            <!-- Запомнить меня -->
            <CheckBox x:Name="RememberCheckBox" 
                      Content="Запомнить меня"
                      Margin="0,0,0,15"/>

            <!-- Сообщение об ошибке -->
            <TextBlock x:Name="ErrorTextBlock" 
                       Foreground="Red" 
                       TextWrapping="Wrap"
                       Visibility="Collapsed"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Вход" 
                    Width="80" 
                    x:Name="LoginButton"
                    IsDefault="True"/>
            <Button Content="Отмена" 
                    Width="80" 
                    Margin="10,0,0,0"
                    x:Name="CancelButton"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>